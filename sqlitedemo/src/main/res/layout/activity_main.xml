<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.sanfeng.hotelbutler.sqlitedemo.MainActivity">

    <Button
        android:id="@+id/insertUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入一条用户数据"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/getUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获得用户数据" />

    <Button
        android:id="@+id/insertListPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="插入多条person"
        />
    <Button
        android:id="@+id/queryAllPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="查询多条person"
        />
    <Button
        android:id="@+id/deleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="删除用户表"
        />
    <Button
        android:id="@+id/updateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="修改用户数据"
        />
    <Button
        android:id="@+id/updatePerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="修改指定person"
        />

</LinearLayout>
